#include <ESP32Servo.h>

Servo myServo;
int servoPin = 13;
int angle = 90;

void setup() {
  Serial.begin(115200);
  myServo.attach(servoPin);
  myServo.write(angle);
}

void loop() {
  if (Serial.available()) {
    char cmd = Serial.read();

    if (cmd == 'L') angle -= 3;
    if (cmd == 'R') angle += 3;

    angle = constrain(angle, 0, 180);
    myServo.write(angle);
  }
}
